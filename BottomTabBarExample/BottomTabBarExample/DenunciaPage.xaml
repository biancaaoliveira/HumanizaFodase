<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Denuncie"  
             Icon="ic_report_problem_white_24dp.png" 
             x:Class="BottomTabBarExample.DenunciaPage" BackgroundColor="#ECDFFD">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=" " FontSize="17" XAlign="Center"/>
            <Label Text="Já sofreu violência obstétrica?" FontSize="17" XAlign="Center" Margin="10" FontAttributes="Bold"/>
            <Label Text="Denuncie nos órgãos abaixo:" XAlign="Center" Margin="5"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Image="Denuncia1.png" Clicked="GoToURL1" HorizontalOptions="Start" Margin="10" BackgroundColor="#d5b7ee"/>
                <Button Image="Denuncia2.png" Clicked="GoToURL2" HorizontalOptions="End" Margin="10" BackgroundColor="#d5b7ee"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Image="Denuncia3.png" Clicked="GoToURL3" HorizontalOptions="Start" Margin="10" BackgroundColor="#d5b7ee"/>
                <Button Image="Denuncia4.png" Clicked="GoToURL4" HorizontalOptions="End" Margin="10" BackgroundColor="#d5b7ee"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>