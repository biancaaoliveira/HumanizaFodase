<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BottomTabBarExample.LoginPage">
    <ContentPage.Content>
        <Grid>
            <StackLayout Margin="20" VerticalOptions="Center">
                <Image HeightRequest="200" Source="gestante.png"></Image>

                <Label Text="Email" TextColor="Black" ></Label>

                <Entry x:Name="_Email" TextColor="Gray" Text="teste@email.com"></Entry>

                <Label Text="Senha" TextColor="Black" ></Label>

                <Entry x:Name="_Senha" IsPassword="True" TextColor="Gray" Text="123"></Entry>

                <Button Clicked="Button_Clicked" Text="login"  BackgroundColor="#d5b7ee"></Button>

                <Button Clicked="cadastrar_clicked" Text="Cadastrar"  BackgroundColor="#d5b7ee"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
    