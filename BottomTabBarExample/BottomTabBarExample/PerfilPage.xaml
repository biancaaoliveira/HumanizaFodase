<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BottomTabBarExample.PerfilPage">
        
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="Center">
            <Image HeightRequest="200" Source="gestante.png"></Image>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
               
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Label Text="Nome" TextColor="Black"></Label>
                    <Label Text="Usuario teste da silva" TextColor="Red"></Label>
                    <Label TextColor="Black">Email:</Label>
                    <Label Text="teste@email.com" TextColor="Red"></Label>
                    
                   
                </StackLayout>
                
            </StackLayout>
            <StackLayout>
                <Button Text="Sobre o App" BackgroundColor="#d5b7ee" HorizontalOptions="Center" WidthRequest="120"></Button>
                <Button Text="Termos de Uso e Privacidade " BackgroundColor="#d5b7ee" ></Button>

                <Button Clicked ="sair_clicked" Text="Sair" BackgroundColor="#d5b7ee"></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>