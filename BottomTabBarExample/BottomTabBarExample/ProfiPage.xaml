<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Profi"
              Icon="denuncie2.png"
             
             x:Class="BottomTabBarExample.ProfiPage">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" >
                <Button Text="Doulas" Clicked="Doulas_Clicked"  BackgroundColor="#d5b7ee" ></Button>
                <Button Text="Profissionais" Clicked="Profissionais_Clicked"  BackgroundColor="#d5b7ee"></Button>
            </StackLayout>
            <ListView x:Name="lvUsuarios">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="Nome"></Label>
                                <Label Text="Telefone"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>